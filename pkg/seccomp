[deps]
bash

[build]
patch -p1 < "$K"/seccomp.patch || exit 1
CFLAGS="$optcflags" LDFLAGS="$optldflags" \
   ./configure -C --prefix="$butch_prefix" \
     --libdir=/lib || exit 1
make -j$MAKE_THREADS || exit 1
make DESTDIR="$butch_install_dir" install || exit 1
