[build]
patch -p1 < "$K/libxml2-pthread.patch"
CFLAGS="-D_GNU_SOURCE -fPIC" ./configure -C --prefix="$butch_prefix" --enable-shared --without-iconv --without-iso8859x --without-legacy || exit 1
make -j$MAKE_THREADS || exit 1
make DESTDIR="$butch_install_dir" install || exit 1
