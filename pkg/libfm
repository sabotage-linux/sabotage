[build]
#patch -p1 < "$K/some.patch"
[ -n "$CROSS_COMPILE" ] && xconfflags="--host=$($CC -dumpmachine|sed 's/musl/gnu/')"
CFLAGS="$optcflags -D_GNU_SOURCE" LDFLAGS="$optldflags -lffi -lz -lgmodule-2.0 -lglib-2.0 -lgtk-x11-2.0 -lgthread-2.0" \
./configure -C --prefix="$butch_prefix" --disable-nls $xconfflags || exit 1

for i in po ; do
	printf 'all:\n\ttrue\ninstall:\n\ttrue\clean:\n\ttrue\n' > "$i"/Makefile
done

make -j$MAKE_THREADS || exit 1
make DESTDIR="$butch_install_dir" install || exit 1
