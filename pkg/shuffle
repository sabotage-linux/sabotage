[build]
make -j$MAKE_THREADS CFLAGS2="$optcflags" LINKFLAGS="$optldflags" || exit 1
dest="$butch_install_dir""$butch_prefix"
mkdir -p "$dest"/bin "$dest"/share/man/man1/
cp -a shuffle "$dest"/bin
cp -a shuffle.1 "$dest"/share/man/man1/
