[build]
case "$A" in
	i?86) A=i386 ;;
	x86_64-x32) A=x32 ;;
esac
make ARCH="$A" prefix="$butch_prefix" DESTDIR="$butch_install_dir" install \

dest="$butch_install_dir""$butch_prefix"
#fix ext2 header...
install -Dm 644 "$K"/ext2_fs.h "$dest"/include/linux/
#fix swab header
sed -i '4a\
\n#include <linux/stddef.h>\n' "$dest"/include/linux/swab.h

