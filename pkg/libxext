[build]
[ -n "$CROSS_COMPILE" ] && xconfflags="--host=$($CC -dumpmachine)"
CFLAGS="$optcflags" LDFLAGS="$optldflags -lxcb-xvmc -lxcb -lXau" \
  ./configure -C --prefix="$butch_prefix" $xconfflags || exit 1
make DESTDIR="$butch_install_dir" -j$MAKE_THREADS install || exit 1
rm "$butch_install_dir""$butch_prefix"/lib/*.la

