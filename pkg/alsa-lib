[deps]
kernel
sabotage-utils

[main]
filesize=838403
sha512=bd7066d588d0eadc7872980847d7474fce25ddcff813aa8a9a62216a2f981118d7b4de745b3dd3ab7203b892657e0574d5b66e31dfd8e883e76afb4c6ae8139e

[mirrors]
