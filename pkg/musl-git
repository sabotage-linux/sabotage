[deps]
dynamic-toolchain
git

[build]
dest="$S/build/"
if [ -d "$dest/musl-git" ] ; then
	cd "$dest/musl-git"
	git pull || exit 1
else
	mkdir -p "$dest"
	cd "$dest"
	git clone git://git.etalabs.net/musl musl-git || exit 1
	cd musl-git
fi

./configure --prefix=$butch_prefix --syslibdir=$butch_prefix/lib
if [ "$A" = "powerpc" ] ; then
cat << EOF >> config.mak
LDFLAGS += -Wl,--secure-plt
CFLAGS += -msecure-plt
EOF
fi

# enable debug libc when DEBUGBUILD is set
[ ! -z "$DEBUGBUILD" ] && echo "CFLAGS += -O0 -g3" >> config.mak
[ ! -z "$DEBUGBUILD" ] && echo "CFLAGS_ALL_SHARED += -O0 -g3" >> config.mak

make clean
make -j$MAKE_THREADS || exit 1
make DESTDIR="$butch_install_dir" install || exit 1

