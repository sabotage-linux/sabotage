[deps.host]
dynamic-toolchain

[deps]
ubase

[vars]
versionstr=$(cat "$K"/ubase.version)
tarball=ubase-"$versionstr".tar.bz2

[build]
cp "$K"/ubase-passwd.Makefile Makefile
sed -i 's@^\(PREFIX = *\).*@\1'"$butch_prefix"'@' config.mk
sed -i 's@^\(CFLAGS * = *\).*@\1'"$optcflags"'@' config.mk
sed -i 's@^\(LDFLAGS * = *\).*@\1'"$optldflags"' -static@' config.mk
make -j$MAKE_THREADS
make DESTDIR="$butch_install_dir" install
chmod +s "$butch_install_dir""$butch_prefix"/bin/passwd

