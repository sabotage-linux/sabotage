[build]
patch -p1 < "$K"/uboot-ulong.patch || exit 1

make HOSTCFLAGS_XXX+="-D_GNU_SOURCE $optcflags" \
  HOSTLDFLAGS_XXX+="$optldflags" \
  tools -j$MAKE_THREADS || exit 1

dest="$butch_install_dir""$butch_prefix"
install -D -m 755 tools/mkimage "$dest"/bin/mkimage || exit 1
