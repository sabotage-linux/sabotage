[deps]
intltool
gettext
xkbcomp

[main]
filesize=912379
sha512=24daa9735a6ce4a565df9f3cc33f679b52cc8ca0bf493cb1ca93e2fadb862792a719d55b54ffb93dd32ca7856ddeeb0138687c11b3dce8f547bd22325329cb1b

[mirrors]
http://xorg.freedesktop.org/archive/individual/data/xkeyboard-config/xkeyboard-config-2.9.tar.bz2

[build]
./configure -C --prefix="$butch_prefix" \
  --with-xkb_base="$butch_prefix"/share/X11/xkb --with-xkb-rules-symlink=xorg || exit 1

for i in po ; do
	printf 'all:\n\ttrue\ninstall:\n\ttrue\clean:\n\ttrue\n' > "$i"/Makefile
done

make -j$MAKE_THREADS || exit 1
make DESTDIR="$butch_install_dir" install || exit 1

