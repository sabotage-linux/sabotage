[build]

make -j$MAKE_THREADS LDFLAGS="-static $optldflags" STRIP= \
  CHECK_RUN_DIR=0 \
  CC="$CC" \
  CXFLAGS="$optcflags" \
  CWFLAGS=-Wall \
  MANDIR="$butch_prefix"/share/man \
  BINDIR="$butch_prefix"/bin \
  RUN_DIR="$butch_prefix"/var/run/mdadm \
  DESTDIR="$butch_install_dir" all install
