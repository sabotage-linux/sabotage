[deps]

[build]
patch -p0 defs.h < "$K"/heirloom-sh-defs.patch #disable dependency on sys/acct.h
sed -i 's@getopt(@mygetopt(@g' jobs.c getopt.c bltin.c ulimit.c
make -j$MAKE_THREADS CFLAGS="$optcflags" LDFLAGS="$optldflags -static"
dest="$butch_install_dir""$butch_prefix"
install -D -m 644 sh.1.out "$dest"/share/man/man1/jsh.1
install -D -m 755 sh "$dest"/bin/jsh
