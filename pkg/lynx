CFLAGS="-include termcap.h -D_GNU_SOURCE -Wl,-rpath-link=/lib -I/include/openssl" ./configure -C --prefix=/ --sysconfdir=/etc --mandir=/share/man \
  --with-ssl --disable-nls --enable-ipv6  || exit 1
#passing -jXXX to make has no effect on this pkg
make || exit 1
make DESTDIR="$butch_install_dir" install || exit 1
