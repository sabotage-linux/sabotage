#!/bin/sh

tarxf http://mirror.wzff.de/butch/ butch-0.1.1 .tar.bz2 butch

filesize='62697'
sha512='eef9a6d6c11aaed8c59193b77953d5bc910a60da047cd56415b54b3f58cf5d5f18a80bf48e094acc0829a5457ef65d8c173d6ba059af08826fcb0bee75361d01'

filename="$S"/butch-0.1.1.tar.bz2

read sz _ <<EOF
$(du -b "$filename")
EOF

if [ "$sz" != "$filesize" ]; then
    printf -- "error: build-butch: wrong filesize. got: %d expected: %d\n" "$sz" "$filesize"
    exit 1
fi

read sha _ <<EOF
$(sha512sum "$filename")
EOF

if [ "$sha" != "$sha512" ]; then
    printf -- "error: build-butch: hash doesn't match.\n"
    exit 1
fi

# this speeds up compilation a bit
echo "CFLAGS=-O0 -g" > lib/config.mak
./build.sh
cp butch/butch "$S"/butch.bin
cp "$filename" "$C"/

